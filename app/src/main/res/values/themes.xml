<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FirstDraft" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/my_light_purple</item>
        <item name="colorPrimaryVariant">@color/my_pink</item>
        <item name="colorOnPrimary">@color/my_bez</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/my_light_purple</item>
        <item name="colorSecondaryVariant">@color/my_purple</item>
        <item name="colorOnSecondary">@color/my_bez</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/raleway_medium</item>

    </style>

    <style name="Theme.FirstDraft.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FirstDraft.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FirstDraft.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>